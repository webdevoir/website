<h1 id="page_title">Articles</h1>

<% if user_signed_in? %>
  <div id="admin_links">
    <%= link_to "New Article", new_post_path(@post) %>
  </div>
<% end %>

<div id="posts_wrapper" class="skinny_wrapper">

  <% @posts.each do |post| %>
    <div class="post">
      <p class="date"><%= post.created_at.strftime("%A, %B %d") %></p>
      <h2><%= link_to post.title, post %></h2>
      <hr>
    </div>
  <% end %>
</div>

<%= will_paginate @posts %>
